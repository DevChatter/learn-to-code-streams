@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Hello World!</h1>

<p>Welcome to my first web site! I am very proud of it!</p>

<p>You requested this page at @Model.CurrentTime.</p>

<p>We have this special message from the webmaster: "@Model.MyMessage"</p>

<p>This page has been visited @IndexModel.Count times since restarting!</p>

<ul>
    @{
        for (int i = 1; i < 11; i++)
        {
            <li>Item Number @i</li>
        }
    }
</ul>
